<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hd_wallpaper_sky_lightning_weather"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Grados"
        android:layout_width="wrap_content"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="120dp"
        android:text="@string/texto_grados"
        android:textColor="#FFFFFF"
        android:textSize="96sp" />

    <TextView
        android:id="@+id/Estatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ciudad"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="244dp"
        android:text="@string/texto_estatus"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/Ciudad"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Grados"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="-3dp"
        android:text="@string/texto_ciudad"
        android:textColor="#FAFAFA"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="169dp"
        android:layout_height="155dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="125dp"
        android:layout_marginBottom="149dp"
        app:srcCompat="@drawable/_140045" />
</RelativeLayout>

